<%- include("../partials/header.ejs") %>
<body>
	
	<div class="container text-center">
		<h1>THESE ARE ALL THE CARS WE HAVE</h1>
		<a href="/cars/new" class="btn btn-warning">Create a new car</a>
		<% for(let car of cars) { %>
			<div class="card" style="width: 18rem;">
				  <img src="<%=car.img%>" class="card-img-top" alt="...">
				  <div class="card-body">
					<h5 class="card-title"><%=car.manufacturer%> - <%= car.brand%></h5>
					<p class="card-text"><%= car.description %></p>
					<a href="/cars/<%=car.id%>" class="btn btn-primary">Details</a>
					<a href="/cars/<%=car.id%>/edit" class="btn btn-warning">Edit post</a>
					<form action="/cars/<%=car.id%>?_method=DELETE" method="POST">
						<button class="btn btn-danger mt-2">DELETE POST</button>	 
					</form>
				  </div>
			</div>
		<% } %>
	</div>
</body>

